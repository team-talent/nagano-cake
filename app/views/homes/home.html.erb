<div class="container">
	<div class="row">
		<div class="col-xs-2" >

			<%= render 'products/list', genres:@genres %>

		</div>

		<div class="col-xs-10">

			<div class="bg_img">

				<div class="bg_text">
					ようこそ、NaganoCakeへ！<br>
					このサイトは、ケーキ販売のECサイトになります。<br>
					会員ではない方も商品の閲覧はできますが、<br>
					購入には会員登録が必要になります。
				</div>

			</div>



			<h3>オススメ商品</h3>

			<% @products.each do |product| %>

				<% if product.recommend_status == 1 %>

				<div class="col-xs-3">

					<%= link_to product_path(product.id) do %>
					<%= attachment_image_tag product, :image, fallback: "no_image.jpg", size:'200x160' %>
					<% end %>
					<p>
						<%= product.name %>
						<% if product.sale_status  == 1 %>
               			(販売中)
						<% else %>
						(売り切れ)
						<% end %>
					</p>
					<p>￥<%= product.price %></p>

				</div>


				<% end %>

			<% end %>

		</div>


		<%= link_to "もっと見る>", products_path, class:"col-xs-2 col-xs-offset-10" %>

	</div>
</div>