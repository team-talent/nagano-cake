<div class="container">
	<div class="row">
		<div class="col-xs-2" >

			<%= render 'products/list', genres:@genres %>

		</div>

		<div class="col-xs-10">

			<div class="bg_img">

				<div class="bg_text">
					ようこそ、NaganoCakeへ！<br>
					このサイトは、ケーキ販売のECサイトになります。<br>
					会員ではない方も商品の閲覧はできますが、<br>
					購入には会員登録が必要になります。
				</div>

			</div>



			<h3>オススメ商品</h3>

				<div class="col-xs-10">
					<div>
						<%= link_to product_path(@product1) do %>
						<%= attachment_image_tag @product1, :image, fallback: "no_image.jpg", size:'100x80' %>
						<% end %>
						<p><%= @product1.name %></p>
						<p>￥<%= @product1.price %></p>
					</div>
					<div>
						<%= link_to product_path(@product2) do %>
						<%= attachment_image_tag @product2, :image, fallback: "no_image.jpg", size:'100x80' %>
						<% end %>
						<p><%= @product2.name %></p>
						<p>￥<%= @product2.price %></p>
					</div>
					<div>
						<%= link_to product_path(@product3) do %>
						<%= attachment_image_tag @product3, :image, fallback: "no_image.jpg", size:'100x80' %>
						<% end %>
						<p><%= @product3.name %></p>
						<p>￥<%= @product3.price %></p>
					</div>
				</div>
		</div>


		<%= link_to "もっと見る>", products_path, class:"col-xs-2 col-xs-offset-10" %>

	</div>
</div>