<div class="container">
	<dix class="row">
		<div class="col-xs-9 col-xs-offset-1">
			
			<div class="row">
				<div class="col-xs-8 col-xs-offset-2">
					<span class="pull-left" style="background-color: #C0C0C0; font-size: 2.0em; margin-bottom: 40px;">
						商品一覧
					</span>
				</div>
			</div>

            <p class="text-right">
	            <%= link_to new_staffs_product_path(@product), data: {"turbolinks" => false} do %>
					<span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
				<% end %>
		    </p>

			<table class="table ">
				<thead>
					<tr class="active">
						<th>商品ID</th>
						<th>商品名</th>
						<th>税抜価格</th>
						<th>ジャンル</th>
						<th>ステータス</th>
					</tr>
				</thead>
				<tbody>
					<% @products.each do |product| %>
					<tr>
						<td><%= product.id %></td>
						<td>
							<u><%= link_to product.name, staffs_product_path(product.id), class: "product_#{product.id}" %></u>
						</td>
						<td><%= product.price %></td>
						<td><%= product.genre.category_name %></td>
						<td>
						    <% if product.sale_status == 1 %> 
							<p>販売中</p>
							<% else %>
							<p>売切れ</p>
							<% end %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</dix>
</div>