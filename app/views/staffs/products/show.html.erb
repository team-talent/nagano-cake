<div class="container">
	<dix class="row">
		<div class="col-xs-4 col-xs-offset-1">
			<span style="display: block; margin-bottom: 30px; background-color: #cccccc; text-align: center;">
				<h3>商品詳細</h3>
			</span>
		</div>
	</dix>
</div>

<div class="container">
	<dix class="row">
		<div class="col-xs-4">
			<div class="image" style="margin-left: 100px;">
				<%= attachment_image_tag(@product, :image, size:'250x250', format: 'jpeg', class: "img-square pull-left profile-img", fallback: "no_image.jpg") %>
			</div>
		</div>

		<div class="col-xs-7 col-xs-offset-1">
			<div class="table-responsive">
				<table class="table">
					<tbody>
						<tr>
							<th style="border: none;">商品名</th>
							<td style="border: none;"><%= @product.name %><td>
						</tr>
						<tr>
							<th style="border: none;">商品説明</th>
							<td style="border: none;"><%= @product.explain %></td>
						</tr>
						<tr>
							<th style="border: none;">ジャンル</th>
							<td style="border: none;"><%= @category_name %></td>
						</tr>
						<tr>
							<th style="border: none;">税込価格（税抜き価格)</th>
							<td style="border: none;">
								<% addtax= @product.price * 1.1 %>
								<%= addtax.round %>円(<%= @product.price %>円）
							</td>
						</tr>
						<tr>
							<th style="border: none;">販売ステータス</th>
							<td style="border: none;">
								<% if @product.sale_status == 1 %>
								<p>販売中</p>
								<% else %>
								<p>売切れ</p>
								<% end %>
							</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
		<%= link_to '編集する', edit_staffs_product_path(@product), class: "btn btn-primary pull-right", data: {"turbolinks" => false} %>
			
	</div>
</div>
