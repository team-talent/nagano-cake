<div class="container staffs_genres_edit">
  <%= render 'layouts/errors', model: @genre %>
  <div class="row">
    <div class="col-xs-4 col-xs-offset-1">
      <span class="title_staffs_genre">
        <h3>ジャンル編集</h3>
      </span>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-8">
    	<%= form_for(@genre, url:staffs_genre_path) do |f| %>
    		<div class="field">
    			<%= f.label :ジャンル %>
    			<%= f.text_field :category_name, autofocus: true %>
    			<%= f.radio_button :genre_status, :true %>
    			<%= f.label :genre_status, :有効 %>
    			<%= f.radio_button :genre_status, :false %>
    			<%= f.label :genre, :無効 %>
    			<%= f.submit "変更を保存する", class: "btn btn-primary" %>
    	<% end %>
    </div>
  </div>
</div>