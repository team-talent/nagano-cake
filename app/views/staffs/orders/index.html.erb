<div class="container">
  <div class="row">
    <div class="col-xs-4 col-xs-offset_1">
      <span class="title_staffs_orders">
        <h3>注文履歴一覧</h3>
      </span>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-10">
        <table class="table">
            <thread>
                <tr>
                    <th>購入日時</th>
                    <th>購入者</th>
                    <th>注文個数</th>
                    <th>注文ステータス</th>
                </tr>
            </thread>
            <tbody>
                <% @orders.each do |orders| %>
                <tr>
                    <td><%= link_to orders.created_at.in_time_zone('Japan').strftime("%Y/%m/%d %H:%M:%S"), staffs_order_path(orders) %></td>

                    <td><%= orders.customer.last_name + orders.customer.first_name%></td>

                    <% @total_product_vol = 0 %>
                    <% orders.details.each do |detail| %>
                        <% @total_product_vol += detail.product_vol %>
                    <% end %>
                    <td><%= @total_product_vol %></td>

                    <td><%= orders.order_status %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
  </div>
</div>
