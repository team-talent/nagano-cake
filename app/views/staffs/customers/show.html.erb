<div class="container">
	<dix class="row">
		<div class="col-xs-6 col-xs-offset-1">
			<span style="display: block; margin-bottom: 30px; background-color: #cccccc; text-align: center;">
				<h3><%= @customer.last_name %>
					<%= @customer.first_name %>さんの会員詳細
				</h3>
			</span>
		</div>
	</dix>
</div>


<div class="container">
	<dix class="row">
		<div class="col-xs-8 col-xs-offset-1">
			<table class="table">
				<tbody>
					<tr>
						<td>
							<h4>顧客ID</h4>
							
							<th>
								<%= @customer.id %>
							</th>
							<th>
								<% if @customer.customer_status == false %>
								  <span style="display: block; border: solid 3px #00000; ">有効会員</span>
								<% else %>
								   <span>退会済</span>
								<% end %>
							</th>

						</td>
					</tr>
					<tr>
						<th>
							<h4>氏名</h4>
						</th>
						<th>
							<%= @customer.last_name %>
							<%= @customer.first_name %>
						</th>
					</tr>
					<tr>
						<th>
							<h4>フリガナ</h4>
						</th>
						<th>
							<%= @customer.last_name_kana %>
							<%= @customer.first_name_kana %>
						</th>
					</tr>
					<tr>
						<th>
							<h4>郵便番号</h4>
						</th>
						<th>
							<%= @customer.postal_code %>
						</th>
					</tr>
					<tr>
						<th>
							<h4>住所</h4>
						</th>
						<th>
							<%= @customer.address %>
						</th>
					</tr>
					<tr>
						<th>
							<h4>電話番号</h4>
						</th>
						<th>
							<%= @customer.tel %>
						</th>
					</tr>
					<tr>
						<th>
							<h4>メールアドレス</h4>
						</th>
						<th>
							<%= @customer.email %>
						</th>
					</tr>
				</tbody>
			</table>
			<%= link_to '編集する', edit_staffs_customer_path(@customer), class: "btn btn-primary", data: {"turbolinks" => false} %>

			<%= link_to '注文履歴一覧を見る', root_path, class: "btn btn-primary", data: {"turbolinks" => false} %>			
		</div>
	</dix>
</div>
