<div class="container staffs_customers_customer_orders">
  <div class="row">
    <div class="col-xs-4 col-xs-offset_1">
      <span class="title_staffs_orders">
        <h3>注文履歴一覧</h3>
      </span>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-10">
        <table class="table">
            <thread>
                <tr>
                    <th>購入日時</th>
                    <th>配送先</th>
                    <th>注文個数</th>
                    <th>注文ステータス</th>
                </tr>
            </thread>
            <tbody>
                <% @customer.orders.each do |customer_order| %>
                <tr>
                    <td><%= link_to customer_order.created_at.in_time_zone('Japan').strftime("%Y/%m/%d %H:%M:%S"), show_individual_staffs_order_path(customer_order)%></td>

                    <td><%= customer_order.name_tosend %></td>

                    <% @total_product_vol = 0 %>
                    <% customer_order.details.each do |detail| %>
                        <% @total_product_vol += detail.product_vol %>
                    <% end %>
                    <td><%= @total_product_vol %></td>

                    <td><%= customer_order.order_status %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
  </div>
</div>
