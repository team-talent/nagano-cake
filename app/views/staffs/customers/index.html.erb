<div class="container">
	<dix class="row">
		<div class="col-xs-9 col-xs-offset-1">

			<div class="row">
				<div class="col-xs-8 col-xs-offset-2">
					<span class="pull-left" style="background-color: #C0C0C0; font-size: 2.0em; margin-bottom: 40px;">
						会員一覧
					</span>
				</div>
			</div>

			<table class="table">
				<thead>
					<tr>
						<th>会員ID</th>
						<th>氏名</th>
						<th>メールアドレス</th>
						<th>ステータス</th>
					</tr>
				</thead>
				<tbody>
					<% @customers.each do |customer| %>
					<tr>
						<td><%= customer.id %></td>
						<% name= customer.last_name + customer.first_name %>
						<td><%= link_to name, staffs_customer_path(customer.id), class: "customer_#{customer.id}" %>
						</td>
						<td><%= customer.email %></td>

						<td>
							<% if customer.customer_status == false %>
							  <p>有効</p>
							<% else %>
							   <p>退会済</p>
							<% end %>
							 
						</td>	
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</dix>
</div>