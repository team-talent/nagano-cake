<div class="container staffs_customer_index">
	<div class="row">
		<div class="col-xs-4 col-xs-offset-1">
			<span style="display: block; margin-bottom: 30px; background-color: #cccccc; text-align: center;">
				<h3>会員一覧</h3>
			</span>
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-xs-8 col-xs-offset-1">

			<table class="table">
				<thead>
					<tr class="active">
						<th>会員ID</th>
						<th>氏名</th>
						<th>メールアドレス</th>
						<th>ステータス</th>
					</tr>
				</thead>
				<tbody>
					<% @customers.each do |customer| %>
					<tr>
						<td><%= customer.id %></td>
						<% name= customer.last_name + customer.first_name %>
						<td>
							<u><%= link_to name, staffs_customer_path(customer.id), class: "customer_#{customer.id}" %></u>
						</td>
						<td><%= customer.email %></td>

						<td>
							<% if customer.customer_status == false %>
							  <p>有効</p>
							<% else %>
							   <p>退会済</p>
							<% end %>
							 
						</td>	
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>