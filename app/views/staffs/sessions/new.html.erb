<div class="container">
  <div class="row">
    <div class="col-xs-4 col-xs-offset-3">
      <div class="title_staffs_login">
        <h3>管理者ログイン</h3>
      </div>
    </div>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>

  <div class="container">
    <div class="row">
      <div class="col-xs-8 col-xs-offset-3">
        <% if alert %>
        <p class="alert alert-error"><%= alert %></p>
        <% end %>
          <div class="form-group">
            <%= f.label :email, :メールアドレス %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "email_input" %>
          </div>
          <div class="form-group">
            <%= f.label :password, :　　パスワード %>
            <%= f.password_field :password, autocomplete: "current-password", class: "password_input" %>
          </div>
        </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-xs-1 col-xs-offset-5">
        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    </div>
  </div>

<% end %>
    
