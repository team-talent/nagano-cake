<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= render 'list', genres: @genres %>
    </div>

    <div class="col-xs-9">
      <h2>商品一覧</h2>
      <span>（全<%= @products.count %>件）</span>
      <div class="row">

        <% @products.each do |product| %>
          <div class="col-xs-3 mx-auto">
          <div class="row">
            <%= link_to product_path(product.id) do %>
              <%= attachment_image_tag product, :image, fallback: "no_image.jpg", width: "auto", height: "100", class: "text-center" %>
            <% end %>
          </div>
          <div class="row">
            <%= product.name %>
              <% if product.sale_status  == 1 %>
               (販売中)
              <% else %>
               (売り切れ)
              <% end %>
            </div>
          <div class="row">￥<%= product.price %></div>
        </div>
        <% end %>

      </div>
    </div>
  </div>
</div>