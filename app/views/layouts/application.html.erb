<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Londrina+Shadow" rel="stylesheet">
  </head>

  <body>

    <nav class="navbar navbar-fixed-top navbar-default" style="background-color:pink; ">
      <div class="container-fluid">
        
          <div class="navbar-header">

            <% if staff_signed_in? %>
              <%= link_to staffs_root_path, class: "navbar-brand" do %>
               <p class="logo-tytle">naganoCAKE</p>
              <% end %>

            <% else %>
              <%= link_to root_path, class: "navbar-brand" do %>
                <p class="logo-tytle">naganoCAKE</p>
              <% end %>
            <% end %>

            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#gnavi" aria-expanded="false" aria-controls="navbar">
              <span class="sr-only">メニュー</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div>

          <div id="gnavi" class="collapse navbar-collapse">
            <ul class="nav navbar-nav navbar-right menu">
              <% if customer_signed_in? %>
                    <%= render"layouts/customer_header" %>
              <% elsif staff_signed_in? %>
                    <%= render"layouts/staff_header" %>
              <% else %>
              <li><%= link_to ' 商品一覧', products_path, class:"btn btn-default btn-sm allbtn"  %></li>
              <li><%= link_to ' 新規登録', new_customer_registration_path, class:"btn btn-default btn-sm allbtn", data: {"turbolinks" => false}  %></li>
              <li><%= link_to ' アバウト', homes_about_path, class:"btn btn-default btn-sm allbtn"  %></li>
              <li><%= link_to ' ログイン', new_customer_session_path, class:"btn btn-default btn-sm allbtn"  %></li>
              <% end %>
            </ul>
          </div>
        
      </div>
    </nav>

    <%= yield %>
  </body>
</html>
