<h2>注文情報入力ページ</h2>

<%= form_with(model: @order, url: confirm_orders_path, data: {remote: false}) do |f| %>
<h2>支払方法</h2>
  <div>
    <%= f.radio_button :pay, 0, name: "pay" %>
    <%= f.label :クレジットカード %>
  </div>
  <div>
    <%= f.radio_button :pay, 1, name: "pay" %>
    <%= f.label :銀行振込 %>
  </div>
<h2>お届け先</h2>
  <div>
    <%= f.radio_button :radio_button, 2, name: "address" %>
    <%= f.label :ご自身の住所 %>
    <%= current_customer.postal_code %>
    <%= current_customer.address %>
    <%= current_customer.last_name %>
    <%= current_customer.first_name %>

  </div>

  <div>
    <%= f.radio_button :radio_button, 3, name: "address" %>
    <%= f.label :登録済住所から選択 %>


  </div>

  <div>
    <%= f.radio_button :radio_button, 4, name: "address" %>
    <%= f.label :新しいお届け先 %>
    <div>
      <%= f.label :郵便番号（ハイフンなし） %>
      <%= f.text_field :postcode_tosend %>
    </div>
    <div>
      <%= f.label :住所 %>
      <%= f.text_field :address_tosend %>
    </div>
    <div>
      <%= f.label :宛名 %>
      <%= f.text_field :name_tosend %>
    </div>
  </div>

  <%= f.submit %>

<% end %>