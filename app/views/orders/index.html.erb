<div class="container">
<h2>注文履歴一覧</h2>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </tr>
    </thead>
    <% @orders.each do |orders|%>
    <tbody>
      <tr>
        <td><%= orders.created_at %></td>
        <td>
          <%= orders.postcode_tosend %><br>
          <%= orders.address_tosend %> <br>
          <%= orders.name_tosend %>
        </td>
        <td></td>
        <td><%= orders.total_price %> 円</td>
        <td><%= orders.order_status %></td>
        <td><%= link_to "表示", order_path(orders.id) %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>