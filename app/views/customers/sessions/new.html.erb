<div class="container">
  <div class="row">
    <div class="col-xs-4 col-xs-offset-1">
      <span class="title_backcolor">
        <h3>会員の方はこちらをログイン</h3>
      </span>
    </div>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="container">
    <div class="row">
      <div class="col-xs-8 col-xs-offset-3">
        <% if alert %>
          <p class="alert alert-error"><%= alert %></p>
        <% end %>
        <div class="form-group">
        <%= f.label :email, :メールアドレス %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "email_input" %>
        </div>

        <div class="form-group">
        <%= f.label :password, :　　パスワード %>
          <%= f.password_field :password, autocomplete: "current-password", class: "password_input"  %>
        <P>　　　　　　　　　　             　　　　　<%= link_to "=>パスワードを忘れた方はこちら", new_password_path(resource_name) %></P>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-xs-7 col-xs-offset-4">
        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-xs-4 col-xs-offset-1">
        <span class="title_backcolor">
          <h3>登録がお済みでない方</h3>
        </span>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="ol-xs-8 col-xs-offset-3">
        <p><%= link_to "こちら", new_registration_path(resource_name) %>から新規登録を行ってください。</p>
      </div>
    </div>
  </div>
<% end %>

