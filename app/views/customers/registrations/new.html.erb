<div class="container">
  <div class="row">
    <div class="col-xs-4 col-xs-offset-1">
      <span class="title_backcolor">
        <h3>新規会員登録</h3>
      </span>
    </div>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>


<dl>
      <dt><%= f.label :name, :名前 %>　　　　　　　(姓)</dt>
      <dd><%= f.text_field :last_name, size:"40" %>(名)　<%= f.text_field :first_name, size:"40" %></dd>



      <dt><%= f.label :name_kana, :フリガナ %>　　　　　(セイ)</dt>
      <dd><%= f.text_field :last_name_kana, size:"40" %>(メイ)<%= f.text_field :first_name_kana, size:"40" %></dd>



      <dt><%= f.label :email, :メールアドレス %></dt>
      <dd><%= f.email_field :email, autofocus: true, autocomplete: "email", size:"40" %></dd>



      <dt><%= f.label :postal_code, :郵便番号 %>(ハイフンなし)</dt>
      <dd><%= f.text_field :postal_code, size:"40" %></dd>



      <dt><%= f.label :address, :住所 %></dt>
      <dd><%= f.text_field :address, size:"87" %></dd>



      <dt><%= f.label :tel, :電話番号 %>(ハイフンなし)</dt>
       <dd><%= f.text_field :tel, size:"40" %></dd>



      <dt><%= f.label :password, :パスワード %>(6文字以上)</dt>
      <dd><%= f.password_field :password, autocomplete: "new-password", size:"40" %></dd>



      <dt><%= f.label :password_confirmation, :パスワード %>(確認用)</dt>
      <dd><%= f.password_field :password_confirmation, autocomplete: "new-password", size:"40" %></dd>
  </dl>



  <div class="container">
    <div class="row">
      <div class="col-xs-7 col-xs-offset-4">
        <div class="actions">
          <%= f.submit "新規登録", class: "btn btn-success btn-lg" %>
        </div>
      </div>
    </div>
  </div>




  <div class="container">
    <div class="row">
      <div class="col-xs-4 col-xs-offset-1">
        <span class="title_backcolor">
          <h3>既に登録済みの方</h3>
        </span>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="ol-xs-8 col-xs-offset-3">
        <p><%= link_to "こちら", new_session_path(resource_name) %>からログインしてください</p>
      </div>
    </div>
  </div>


<% end %>