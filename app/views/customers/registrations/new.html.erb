<div class="container">
  <div class="row">
    <div class="col-xs-4 col-xs-offset-1">
      <span class="title_backcolor">
        <h3>新規会員登録</h3>
      </span>
    </div>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>


<div class="container">
  <div class="row">
    <div class="col-xs-11 col-xs-offset-1">
      <div class="field">
      <%= f.label :name, :名前, class: "sinki_input" %> 
      (姓)<%= f.text_field :last_name, class: "sinki_input" %>
      (名)<%= f.text_field :first_name, class: "sinki_input" %>
      </div>
    </div>
  </div>
</div>

     <div class="container">
      <div class="row">
        <div class="col-xs-11 col-xs-offset-1">
      <div class="field">
        <%= f.label :name_kana, :フリガナ %> 
        (セイ)<%= f.text_field :last_name_kana %>
        (メイ)<%= f.text_field :first_name_kana %>
      </div>
    </div>
  </div>
</div>

     <div class="container">
      <div class="row">
        <div class="col-xs-11 col-xs-offset-1">
  <div class="field">
    <%= f.label :email, :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
      </div>
  </div>
</div>

     <div class="container">
      <div class="row">
        <div class="col-xs-11 col-xs-offset-1">
<div class="field">
  <%= f.label :postal_code, :郵便番号 %>(ハイフンなし)
  <%= f.text_field :postal_code %>
</div>
    </div>
  </div>
</div>

     <div class="container">
      <div class="row">
        <div class="col-xs-11 col-xs-offset-1">
<div class="field">
  <%= f.label :address, :住所 %>
  <%= f.text_field :address %>
</div>
    </div>
  </div>
</div>


     <div class="container">
      <div class="row">
        <div class="col-xs-11 col-xs-offset-1">
<div class="field">
  <%= f.label :tel, :電話番号 %>(ハイフンなし)
  <%= f.text_field :tel %>
</div>
    </div>
  </div>
</div>

     <div class="container">
      <div class="row">
        <div class="col-xs-11 col-xs-offset-1">
  <div class="field">
    <%= f.label :password, :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>
    </div>
  </div>
</div>

     <div class="container">
      <div class="row">
        <div class="col-xs-11 col-xs-offset-1">
  <div class="field">
    <%= f.label :password_confirmation, :パスワード %>(確認用)
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
    </div>
  </div>
</div>


  <div class="container">
    <div class="row">
      <div class="col-xs-7 col-xs-offset-4">
        <div class="actions">
          <%= f.submit "新規登録", class: "btn btn-success btn-lg" %>
        </div>
      </div>
    </div>
  </div>




  <div class="container">
    <div class="row">
      <div class="col-xs-4 col-xs-offset-1">
        <span class="title_backcolor">
          <h3>既に登録済みの方</h3>
        </span>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="ol-xs-8 col-xs-offset-3">
        <p><%= link_to "こちら", new_session_path(resource_name) %>からログインしてください</p>
      </div>
    </div>
  </div>


<% end %>